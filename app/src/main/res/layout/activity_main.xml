<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- Background with neon circles -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_neon_circles" />
    
    <!-- Semi-transparent content overlay -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <!-- Exit button in top right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <ImageButton
                android:id="@+id/exit_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_exit_background"
                android:src="@drawable/ic_exit"
                android:scaleType="centerInside"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:contentDescription="Exit"
                android:padding="12dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="18sp"
            android:textColor="#CCCCCC"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/open_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_install_unknown_apps"
            android:textSize="20sp"
            android:padding="24dp"
            android:minWidth="300dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/device_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginBottom="32dp"
            android:background="#1A1A1A"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Links:"
                android:textSize="16sp"
                android:textColor="#888888"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
            
            <TextView
                android:id="@+id/reddit_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reddit Discussion"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackground" />
            
            <TextView
                android:id="@+id/github_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer GitHub"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>
    
</FrameLayout>

